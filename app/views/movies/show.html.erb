<h1> <%= @movie.name %></h1>
<p> <%= @movie.created %></p>
<p> <%= @movie.genre %></p>
<h3> Actors: </h3>
<section id="Actors">
<% @movie.actors.order(:name).each do |actor| %>
	<%= actor.name %>		
<% end %>
</section>
<h3> Actors Average Age: </h3>
<section id="Age">
	<%= @movie.avg_actor_age %>
</section>
<%= form_tag "/movies/#{@movie.id}/actors", method: :patch do %>
  <%= label_tag "name" %>
  <%= text_field_tag :name %>

  <%= submit_tag "Add Actor" %>
<% end %>

